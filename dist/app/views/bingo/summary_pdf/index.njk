    <style>

      /* GLOBAL STYLES */

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        outline: 0;
        list-style: none;
      }

      html, body {
        /* background: #DCE6F1; */
        min-height: 100vh;
      }

      body{
        -webkit-font-smoothing: antialiased;
        display: flex;
        flex-direction: column;
        position: relative;
      }

      body, input, button{
        font-family: 'Titillium Web', serif;
        font-size: 14px;
      }

      h1, h2, h3, h4, h5, h6 {
        font-weight: 500;
      }

      /* TABLE */
      table, table th, table tr, table tr td{
        border: solid 2px white;
      }

      .tab_table, .table_summary {
        border: solid 1px #e4e4f0;
        background-color: #e2eefa;
        margin: 32px 0 5px 0;
      }

      .tab_table h2, .table_summary h2 {
        font-size: 20px;
        color: #4fa5b5;
        padding: 8px 0;
        margin-left: 1.5%;
        font-weight: 600;
      }

      .tab_table h2 span {
        color: azure;
      }

      .tab_table table{
        width: 100%;
      }

      .tab_table table, th, td {
        border: 1px solid #2d2c3c;
        border-collapse: collapse;
        padding: 5px;
      }

      .tab_table table tr:nth-child(1){
        background-color: rgba(86,186,202,0.1);
      }

      .tab_table tr th {
        background-color: rgba(86,186,202,0.09);
      }

      .tab_table table tr.detach {
        color: #2a7380;
        font-weight: bold;
        font-size: 16px;
      }

      .tab_table tr td {
        text-align: center;
        background-color: rgba(86,186,202,0.1);
      }

      .tab_table tr td.no-register {
        color: rgb(233, 103, 80);
        font-weight: 600;
      }

      .tab_table tr td.detach {
        color: #4fa5b5;
        letter-spacing: 0.08em;
        font-weight: bold;
      }

      .tab_table tr td a {
        color: #2b887d;
        font-weight: bold;
      }

      .tab_table tr td a:hover {
        color: #34a093;
      }

      .tab_table tr td span.detach_small {
        color: #ad5d5d;
        letter-spacing: 0.08em;
        font-weight: bold;
        font-size: 11px;
      }

      table tr td.active {
        color: #00f721;
      }

      table tr td.finished {
        color: #ad5d5d;
      }

      table tr .minor_hit {
        color: rgb(23, 145, 59);
        font-weight: bold;
      }

      table tr td.detach_number {
        background:rgb(201, 201, 12);
        font-weight: bold;
      }

      .align_right {
        text-align: right;
      }
      .adm_fee {
        background-color: rgba(86,186,202,0.4);
      }
      .value_bet {
        background-color: rgba(86,186,202,0.2);
      }
      .total_collection {
        background-color: rgba(86,186,202,0.6);
      }
      .format_font {
        font-weight: bold;
        letter-spacing: 1px;
      }


    </style>

  </head>
  <body>
      <section id="pages">

        <div class="box_content">

        {# DADOS DA EDIÇÃO #}
        {% include 'bingo/summary_pdf/edition_data.njk' %}

        {# SORTEIOS DA QUINA #}
        {% include 'bingo/summary_pdf/corner_draws.njk' %}

        {# DEZENAS SORTEADAS #}
