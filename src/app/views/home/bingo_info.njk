<div class="tab_table">
  <h2>EDIÇÃO ATUAL</h2>
  <table>
    <tr>
      <th>EDIÇÃO</th>
      <th>INICIO</th>
      {% if bingo.end_date %}
        <th>TÉRMINO</th>
      {% endif %}
      <th>STATUS</th>
      {% if bingo.summary_pdf != 0 %}
        <th>RESUMO</th>
      {% endif %}
    </tr>
    <tr>
    <tr>
      <td>{{bingo.edition}} ª</td>
      <td>{{bingo.start_date}}</td>
      {% if bingo.end_date %}
        <td>{{bingo.end_date}}</td>
      {% endif %}
      <td
        {% if bingo.status == "ATIVO" %}
          class="active"
        {% else %}
          class="finished"
        {% endif %}
      >{{bingo.status}}
      </td>

      {# MOSTRA DADOS NA HOME #}
      {% if bingo.summary_pdf != 0 %}
        <td><a href="/bingos/{{bingo.id}}/download" target="_blank">Baixar PDF</a></td>
      {% endif %}

    </tr>
  </table>
</div>
