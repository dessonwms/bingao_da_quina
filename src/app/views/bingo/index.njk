{% extends "layout.njk" %}

{% block head %}

          <title>Ativação de Bingo</title>

{% endblock %}

{% block title %}

          <h1>ATIVAÇÃO DE BINGO</h1>

          <div class="breadcrumb">
            <span>
              HOME
              <i class="material-icons">chevron_right</i>
              ATIVAR NOVO BINGO
            </span>
          </div>

{% endblock %}

{% block content %}

      {# onsubmit="return false;" #}
      {# validateForm()" autocomplete="off" #}
      <form id="form_register" method="POST" action="/bingos?_method=PUT">

        {% include 'bingo/fields.njk' %}
        <input type="hidden" name="id" value="{{ bingo.id }}">

          <button type="submit" class="disabled">Atualizar</button>

      </form>

      <hr class="content_separator">

      <div class="tab_table">
        <h2>ÚLTIMOS BINGOS</h2>
        <table>
          <tr>
            <th>EDIÇÃO</th>
            <th>DATA DE INICIO</th>
            <th>FINALIZADO EM</th>
            <th>STATUS</th>
          </tr>
          <tr>
          {% for register in bingoList %}
          <tr>
            <td>{{register.edition}}ª Edição</td>
            <td>{{register.start_date}}</td>
            <td>
              {% if register.end_date %}
                {{register.end_date}}
              {% else %}
                --
              {% endif %}</td>
            <td
              {% if register.status == "ATIVO" %}
                class="active"
              {% else %}
                class="finished"
              {% endif %}
            >{{register.status}}</td>
          </tr>
          {% endfor %}


        </table>
      </div>

{% endblock %}
