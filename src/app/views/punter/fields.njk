<label for="name">NOME COMPLETO</label>
<div class="imput_container">
  <i class="material-icons">person</i>
  <input
    type="text"
    name="name"
    required
    value="{{ punter.name}}"
    placeholder="Digite o nome"
  >
  <span class="error"></span>
</div>

<label for="name">APELIDO OU REFERÊNCIA</label>
<div class="imput_container">
  <i class="material-icons">person</i>
  <input
    type="text"
    name="surname"
    required
    value="{{ punter.surname }}"
    placeholder="Digite o apelido ou referência"
  >
  <span class="error"></span>
</div>

<label for="name">CELULAR</label>
<div class="imput_container">
  <i class="material-icons">phone</i>
  <input
    type="tel"
    name="phone"
    value="{{ punter.phone }}"
    required
    maxlength="15"
    pattern="\(\d{2}\) \d{5}-\d{4}"
    placeholder="Ex: (00) 00000-0000"
    oninput="Mask.apply(this, 'phone')"
    onkeydown="Mask.apply(this, 'phone')"
  >
  <span class="error"></span>
</div>
